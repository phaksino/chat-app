{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A real-time chat application built with MERN stack and Socket.io",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "setup": "npm install && npm run install-all",
    "render-build": "npm run install-all && npm run build",
    "heroku-postbuild": "npm run install-all && npm run build"
  },
  "keywords": [
    "chat",
    "real-time",
    "socket.io",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}